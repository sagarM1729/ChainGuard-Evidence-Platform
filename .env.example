# =============================================================================
# ChainGuard Evidence Platform - Environment Variables Template
# =============================================================================
# Copy this file to .env.local and fill in your actual values
# NEVER commit .env.local to version control!

# NextAuth Configuration
NEXTAUTH_SECRET=your_nextauth_secret_here
NEXTAUTH_URL=http://localhost:3000

# TIER 1: PostgreSQL Database (Neon Cloud)
DATABASE_URL="postgresql://username:password@host:port/database?sslmode=require"

# TIER 2: Hyperledger Fabric Blockchain
FABRIC_NETWORK_PATH="./blockchain/network"
FABRIC_CHANNEL_NAME="evidence-channel"

# TIER 3: IPFS/Storacha Storage
STORACHA_EMAIL=your_email@example.com
STORACHA_SPACE_DID=did:key:your_space_did_here
STORACHA_X_AUTH_SECRET=your_x_auth_secret_here
STORACHA_AUTHORIZATION=your_authorization_token_here

# Email Service
RESEND_API_KEY=your_resend_api_key_here

# Development
NODE_ENV=development